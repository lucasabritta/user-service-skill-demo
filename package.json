{
    "name": "backend-test",
    "version": "1.0.0",
    "description": "Basic setup to for the backend engineer test",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "dev": "npm run mongo:down && npm run mongo:up && npm run docker:delete && npm run docker:build && npm run docker:run",
        "docker:delete": "docker rm -f user-service-container",
        "docker:build": "docker build -t user-service .",
        "docker:run": "docker run --name user-service-container -p 4111:4111 user-service",
        "mongo:up": "docker compose -f infrastructure/database/docker-compose.yml up -d",
        "mongo:down": "docker compose -f infrastructure/database/docker-compose.yml down -v",
        "test": "set DEBUG=* && jest --testPathPattern=test --coverage --runInBand",
        "format": "prettier --write \"**/*.{ts,js,json,md,css}\"",
        "format:check": "prettier --check \"**/*.{ts,js,json,md,css}\""
    },
    "author": "Lucas Abritta",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "mongoose": "^8.20.1",
        "validator": "^13.15.23"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/semver": "^7.7.1",
        "@types/supertest": "^6.0.3",
        "@types/validator": "^13.15.10",
        "jest": "^29.5.0",
        "mongodb-memory-server": "^10.3.0",
        "prettier": "^2.8.8",
        "supertest": "^7.1.4",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    }
}
